{
  "non-interactive": true,
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "commit": true,
    "tag": true,
    "push": true,
    "pushArgs": ["--no-verify"],
    "commitMessage": "[automated] Updated to ${version} [ci skip]",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  }
}
